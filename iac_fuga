[ "$1" = "-v" ] || [ "$1" = "--version" ] && {
  echo "beta"
  exit 0
}

[ "$1" = "-h" ] || [ "$1" = "--help" ] && {
  echo "
    Usage: iac_fuga ACTION... OPTION...
  "
  exit 0
}

# Source library
source ./src/lib/global_variables.sh && \
source ./src/lib/check_config.sh \
|| {
  echo "Error getting source iac_fuga_lib.sh"
  echo
  exit 1
}

case "$1" in 

  *)
    echo "Invalid Option"
    echo "Try ./iac_fuga --help"

esac